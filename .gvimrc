syntax enable
colorscheme deep-space
set antialias
set background=dark
" set blurradius=3
set cmdheight=1
set columns=180
"set guifont=FiraCodeNerdFontComplet-Retina:h13
set guifont=FiraCode\ Nerd\ Font:h13
" set guifontwide=Hiragino\ Maru\ Gothic\ ProN:h13
" set guifontwide=FiraCode\ Nerd\ Font:h13,HiraginoSans-W5:h13
set guifontwide=FiraCode\ Nerd\ Font:h13,YuGo-Medium:h13
" set guifontwide=TsukuBRdGothic-Regular:h13
" set guifontwide=YuGothic:h13
set guioptions-=rL
set noimdisable
set lines=60
" set linespace=1
set macligatures
set macmeta
" set transparency=8

noremap <silent> <D-`> :macaction _cycleWindows:<CR>
noremap! <silent> <D-`> <C-o>:macaction _cycleWindows:<CR>
