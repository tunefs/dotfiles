[alias]
	b = branch -vv
	d = diff
	dc = diff --cached
	l = log
	lp = log -p
	ls = ls-files
	s = status -sb
	wd = diff --color-words
[checkout]
	workers = 0
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
[commit]
	gpgsign = true
	template = /Users/saito/.git.commit.template
[core]
	autocrlf = false
	attributesfile = /Users/saito/.gitattributes
	# fsmonitor = true
	# multipackindex = true
	pager = delta
	precomposeunicode = true
	preloadindex = true
	quotepath = false
	safecrlf = warn
	untrackedcache = true
[credential]
	helper = store --file /Users/saito/.git-credentials
[delta]
	features = decorations
	line-numbers = true
	syntax-theme = Dracula
	tabs = 8
	# theme = Nord
[delta "decorations"]
	# commit-decoration-style = yellow box ul
	# file-decoration-style = yellow ul
	# file-style = yellow
	# hunk-header-decoration-style = yellow box
	# minus-style                   = normal "#500000"
	# minus-non-emph-style          = normal "#500000"
	# minus-emph-style              = normal "#a00010"
	# minus-empty-line-marker-style = normal "#500000"
	# plus-style                    = syntax "#004000"
	# plus-non-emph-style           = syntax "#004000"
	# plus-emph-style               = syntax "#007000"
	# plus-empty-line-marker-style  = syntax "#004000"
[diff]
	compactionHeuristic = true
	# colorMoved = default
	renames = true
[feature]
	manyFiles = true
[fetch]
	parallel = 0
	prune = true
[ghq]
	root = ~/.ghq
[gpg]
	program = /Users/saito/.bin/gpg
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[pull]
	rebase = false
[push]
	default = simple
	followTags = true
	autoSetupRemote = true
[submodule]
	fetchJobs = 0
[tag]
	gpgsign = true
